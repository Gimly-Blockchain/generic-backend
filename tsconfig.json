{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "target": "ES5",
    "lib": ["es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
